<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*strengthtrainer_lift</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <primary>true</primary>
                <length>8</length>
            </field>
            <field>
                <name>name</name>
                <type>text</type>
                <length>200</length>
                <default></default>
                <notnull>true</notnull>
            </field>
        </declaration>
    </table>
    <table>
        <name>*dbprefix*strengthtrainer_set</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <notnull>true</notnull>
                <autoincrement>true</autoincrement>
                <unsigned>true</unsigned>
                <primary>true</primary>
                <length>8</length>
            </field>
	    <field>
	      <name>date</name>
	      <type>date</type>
	      <notnull>true</notnull>
	    </field>
            <field>
	      <!-- Foreign key into lift table -->
                <name>lift_id</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>
	    <field>
	      <name>weight</name>
	      <type>integer</type>
	      <notnull>true</notnull>
	    </field>
	    <field>
	      <name>num_sets</name>
	      <type>integer</type>
	      <notnull>true</notnull>
	    </field>
	    <field>
	      <name>num_reps</name>
	      <type>integer</type>
	      <notnull>true</notnull>
	    </field>
        </declaration>
    </table>
</database>
